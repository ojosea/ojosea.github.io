  <script>
    let totalValue = 0;

    function formatNumberWithComma(number) {
      return number.toLocaleString('pt-BR', { minimumFractionDigits: 2 });
    }

    function addToCart(productNode) {
      const productName = productNode.querySelector('h3').textContent;
      const productPrice = parseFloat(productNode.dataset.price);

      const cartList = document.getElementById('cartList');
      const cartItem = document.createElement('li');
      cartItem.textContent = `${productName} - R$ ${formatNumberWithComma(productPrice)}`;

      const removeButton = document.createElement('button');
      removeButton.textContent = 'Remover';
      removeButton.onclick = function() {
        removeFromCart(cartItem, productPrice);
      };
      cartItem.appendChild(removeButton);

      cartList.appendChild(cartItem);

      totalValue += productPrice;

      const totalValueElement = document.getElementById('totalValue');
      totalValueElement.textContent = `Total: R$ ${formatNumberWithComma(totalValue)}`;
    }

    function removeFromCart(cartItem, productPrice) {
      cartItem.remove();

      totalValue -= productPrice;

      const totalValueElement = document.getElementById('totalValue');
      totalValueElement.textContent = `Total: R$ ${formatNumberWithComma(totalValue)}`;
    }

    function payWithPix() {
      const pixKey = '32999351144';
      const paymentInfo = `Chave Pix: ${pixKey}\nTotal: R$ ${formatNumberWithComma(totalValue)}`;
      alert(paymentInfo);
    }

    function openWhatsApp() {
      const whatsappLink = 'https://wa.me/5532999351144?text=v
